-#Make sure all your bars are the first things in your <body>
%header.bar.bar-nav
  %a{ :href => "#settingsModal", :class=>"icon icon-gear pull-right" }
  %a{ :href => "#", :class=>"icon icon-home pull-left" }
  %h1.title Ratchet + Sinatra

-#Wrap all non-bar HTML in the .content div (this is actually what scrolls)
.content
  .content-padded.center-align
    %h3 Ratchet Example App
    %p Use this template to build web apps that feel native. Build on Haml and Sinatra
  .card
    %ul.table-view
      %li.table-view-cell
        %a{:class=>"push-right", :data => {:transition=> "slide-in"},:href => "/typography" }
          %strong Typography
      %li.table-view-cell
        %a{:class=>"push-right", :data => {:transition=> "slide-in"},:href => "/tab-bar" }
          %strong Tab Bars
      %li.table-view-cell
        %a{:class=>"push-right", :data => {:transition=> "slide-in"},:href => "/buttons" }
          %strong Block Buttons
      %li.table-view-cell
        %a{:class=>"push-right", :data => {:transition=> "slide-in"},:href => "/form" }
          %strong Form Example
      %li.table-view-cell
        %a{:class=>"push-right", :data => {:transition=> "slide-in"},:href => "/slider" }
          %strong Slider Example
      %li.table-view-cell
        %a{:class=>"push-right", :data => {:transition=> "fade"},:href => "/gohome" }
          %strong Home Example Icon

-#Settings Modal
#settingsModal.modal
  %header.bar.bar-nav
    %a{:class=> "icon icon-close pull-right", :href => "#settingsModal" }
    %h1.title Settings Example

  .content
    %form{:class=>"input-group", :action => "" }
      %input{ :type => "text", :placeholder => "Full Name"}/
      %input{ :type => "email", :placeholder => "lionel@gmail.com"}/
      %input{ :type => "password", :placeholder => "Password"}/

      %h5.content-padded App Settings
      %ul.table-view
        %li.table-view-cell.media
          %span.media-object.pull-left.icon.icon-sound
          .media-body
            Enable sounds
          .toggle
            .toggle-handle
        %li.table-view-cell.media
          %span.media-object.pull-left.icon.icon-person
          .media-body
            Parental Controls
          .toggle
            .toggle-handle
      .content-padded
        %button.btn.btn-positive.btn-block Save settings

